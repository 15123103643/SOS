<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".LogonActivity">

    <include layout="@layout/my_jjk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/hint"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/First_aid_tips" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <com.cqeec.by.sos.CircleImageView
            android:id="@+id/photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@mipmap/head_portrait"
            CircleImageView:border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Uname"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                tools:targetApi="o" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usersfzh" />

        <EditText
            android:id="@+id/sfzh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sfzhm"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userjtdz" />

        <EditText
            android:id="@+id/jtdz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ndzz"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userxx" />

        <EditText
            android:id="@+id/xx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ndxx"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usergmfy" />

        <EditText
            android:id="@+id/gmfy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/gmfyh"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userzdy" />

        <EditText
            android:id="@+id/zdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/zdyh"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            tools:targetApi="o" />
    </LinearLayout>


</LinearLayout>